{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}"
            ],
            "console": "internalConsole",
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
            },
            "justMyCode": true,
        }
    ]
}